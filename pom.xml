<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.surfnet.coin</groupId>
	<artifactId>coin-teams-parent</artifactId>
	<version>0.2-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>coin-teams-parent</name>
	<description>Coin Teams Parent</description>
	<scm>
			<connection>scm:svn:https://svn.surfnet.nl/svn/coin-gui/coin-teams/trunk</connection>
		</scm>
		<distributionManagement>
			<repository>
				<id>coin-repo</id>
				<name>coin-repo</name>
				<url>http://bamboo-dev.coin.surfnetlabs.nl</url>
			</repository>
			<snapshotRepository>
				<id>repo</id>
				<name>Repository Name</name>
				<url>http://bamboo-dev.coin.surfnetlabs.nl</url>
			</snapshotRepository>
		</distributionManagement>
	<build>
		<plugins>
			<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-release-plugin</artifactId>
							<version>2.1</version>
						</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<version>3.0.2</version>
				<configuration>
				   <licenseLocation>clover.license</licenseLocation>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<application.distributionManagement.siteUrl>file:///var/opt/maven/sites/coin-teams/${version}</application.distributionManagement.siteUrl>
	</properties>
	<modules>
		<module>coin-teams-war</module>
		<module>coin-teams-dist</module>
	</modules>
</project>