<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.surfnet.coin</groupId>
	<artifactId>coin-teams-parent</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>coin-teams-parent</name>
	<description>Coin Teams Parent</description>
	<build>
		<plugins>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<version>3.0.2</version>
				<configuration>
				   <licenseLocation>clover.license</licenseLocation>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<application.distributionManagement.siteUrl>file:///var/opt/maven/sites/coin-teams/${version}</application.distributionManagement.siteUrl>
	</properties>
	<modules>
		<module>coin-teams-war</module>
		<module>coin-teams-dist</module>
	</modules>
</project>