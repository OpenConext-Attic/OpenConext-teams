<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.surfnet.coin</groupId>
	<artifactId>coin-teams-parent</artifactId>
	<version>1.0.2-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>coin-teams-parent</name>
	<description>Coin Teams Parent</description>
	<scm>
		<connection>scm:svn:https://svn.surfnet.nl/svn/coin-gui/coin-teams/trunk</connection>
	</scm>
	<distributionManagement>
		<repository>
			<id>coin-repo</id>
			<name>coin-repo</name>
			<url>dav:http://bamboo-dev.coin.surfnetlabs.nl</url>
		</repository>
		<snapshotRepository>
			<id>coin-repo</id>
			<name>coin-repo</name>
			<url>dav:http://bamboo-dev.coin.surfnetlabs.nl</url>
		</snapshotRepository>
	</distributionManagement>
	<repositories>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
			<id>coin-repo</id>
			<name>COIN Repository</name>
			<url>http://bamboo-dev.coin.surfnetlabs.nl</url>
		</repository>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
			<id>oauth-maven-repo</id>
			<name>OAuth Maven repository</name>
			<url>http://oauth.googlecode.com/svn/code/maven</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.1</version>
			</plugin>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-clover2-plugin</artifactId>
				<version>3.0.2</version>
				<configuration>
					<licenseLocation>clover.license</licenseLocation>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>

	</build>
	<properties>
		<application.distributionManagement.siteUrl>file:///var/opt/maven/sites/coin-teams/${version}</application.distributionManagement.siteUrl>
	</properties>
	<modules>
		<module>coin-teams-war</module>
		<module>coin-teams-dist</module>
	</modules>
</project>