<?xml version="1.0"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>

        <fileSet>
            <directory>src/main/resources/tomcat</directory>
            <outputDirectory>tomcat/conf</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/tomcat/webapps</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
